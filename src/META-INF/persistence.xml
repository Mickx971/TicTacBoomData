<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="Burglu" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

		<class>com.projetJee.domain.Action</class>
		<class>com.projetJee.domain.Joueur</class>
		<class>com.projetJee.domain.Partie</class>
		<class>com.projetJee.domain.Recharger</class>
		<class>com.projetJee.domain.RechargerSimple</class>
		<class>com.projetJee.domain.SeProteger</class>
		<class>com.projetJee.domain.SuperRechager</class>
		<class>com.projetJee.domain.SuperTir</class>
		<class>com.projetJee.domain.Tir</class>
		<class>com.projetJee.domain.TirSimple</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>

			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:hsql://localhost/" />

			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbc.JDBCDriver" />

			<property name="javax.persistence.jdbc.user" value="SA" />

			<property name="javax.persistence.jdbc.password" value="" />

			<property name="eclipselink.ddl-generation" value="create-or-extend-tables" />

			<property name="eclipselink.ddl-generation.output-mode"	value="database" />

			<property name="eclipselink.logging.level" value="FINE" />

		</properties>
		
	</persistence-unit>
</persistence>


